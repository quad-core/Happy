<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.diwanshusoni.happyapp.activities.MainTaskUploadActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_taskabout_id"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_taskuid_main_id"
            android:text="TASK NUMBER "
            android:textSize="@dimen/def_text_size"
            android:padding="@dimen/def_tv_padding"
            android:textColor="@color/def_tv_text_col"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_maintaskupload_about_id"
            android:src="@drawable/ic_info_black_24dp"
            android:layout_marginRight="16dp"
            android:padding="@dimen/def_tv_padding"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linearlay_taskinfo_tasktodo_dash_id"
        android:layout_margin="@dimen/def_tv_padding"
        android:layout_below="@id/cardview_taskabout_id"
        android:background="@drawable/tasktodo_layoutback"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#a64c61e7"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="@dimen/def_tv_padding"
                android:background="@drawable/tasktodo_layoutback"
                android:textColor="@color/def_tv_text_col"
                android:hint="@string/hint_dash_tv_"
                android:textSize="@dimen/def_text_size"
                android:id="@+id/tv_dash_tasktodo_taskhead_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_dash_tasktodo_createdby_id"
                android:padding="@dimen/def_tv_padding"
                android:textColor="@color/def_tv_text_col"
                android:hint="@string/hint_dash_tv_"
                android:textSize="@dimen/def_text_size"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_dash_tasktodo_taskhead_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_dash_tasktodo_createdon_id"
                android:padding="@dimen/def_tv_padding"
                android:hint="@string/hint_dash_tv_"
                android:textColor="@color/def_tv_text_col"
                android:textSize="@dimen/def_text_size"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_dash_tasktodo_taskhead_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_layout_task_description_id"
            android:background="#a64c61e7"
            android:layout_marginTop="2dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dash_tasktodo_taskdescription_id"
                android:maxLines="8"
                android:padding="@dimen/def_tv_padding"
                android:textColor="@color/def_tv_text_col"
                android:hint="@string/hint_dash_tv_"
                android:textSize="@dimen/def_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_dash_tasktodo_tasktotalsubmissions_id"
                android:visibility="gone"
                android:maxLines="8"
                android:padding="@dimen/def_tv_padding"
                android:textColor="@color/def_tv_text_col"
                android:hint="@string/hint_dash_tv_"
                android:textSize="@dimen/def_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_dash_tasktodo_taskaveragescore_id"
                android:padding="@dimen/def_tv_padding"
                android:textColor="@color/def_tv_text_col"
                android:hint="@string/hint_dash_tv_"
                android:textSize="@dimen/def_text_size"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_dash_tasktodo_tasktotalsubmissions_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_dash_tasktodo_latestsubmission_id"
                android:visibility="gone"
                android:padding="@dimen/def_tv_padding"
                android:hint="@string/hint_dash_tv_"
                android:textColor="@color/def_tv_text_col"
                android:textSize="@dimen/def_text_size"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_dash_tasktodo_taskaveragescore_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linearlay_taskinfo_tasktodo_dash_id"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview_tv_head_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Task Experience : "
                            android:textSize="@dimen/def_text_size"
                            android:padding="@dimen/def_tv_padding"
                            android:textColor="@color/def_tv_text_col"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.v7.widget.CardView>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_maintaskupload_et_post_textdata_id"
                        android:layout_below="@id/cardview_tv_head_id"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                        <EditText
                            android:id="@+id/et_task_exp_main_id"
                            android:gravity="top"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:layout_below="@id/til_maintaskupload_et_post_textdata_id"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp">

                        <FrameLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/btn_img_id"
                                android:src="@drawable/ic_image_black_24dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <ProgressBar
                                android:id="@+id/progress_img_id"
                                android:visibility="invisible"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/vid_id"
                                android:src="@drawable/ic_videocam_black_24dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <ProgressBar
                                android:id="@+id/progress_vid_id"
                                android:visibility="invisible"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <ImageButton
                                android:id="@+id/audio_id"
                                android:src="@drawable/ic_audiotrack_black_24dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <ProgressBar
                                android:id="@+id/progress_audio_id"
                                android:visibility="invisible"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </FrameLayout>
                    </LinearLayout>
                </RelativeLayout>
                <FrameLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <Button
                        android:id="@+id/btn_submit_main_id"
                        android:text="Submit"
                        android:background="@color/colorPrimary"
                        android:textSize="@dimen/def_text_size"
                        android:padding="@dimen/def_tv_padding"
                        android:textColor="@color/def_btn_text_col"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <ProgressBar
                        android:id="@+id/pb_btn_submit_main_id"
                        android:padding="16dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>